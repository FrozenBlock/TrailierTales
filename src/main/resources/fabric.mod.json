{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "Trailier Tales",
  "description": "Overhauls the Trails & Tales update, adding features and improving existing ones.",
  "authors": [
    "Luna"
  ],
  "contributors": [
    "wigglewoggle",
    "voxelotl",
